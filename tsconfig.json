{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "removeComments": true,
    "paths": {
      "*": [
        "*"
      ]
    },
    "rootDirs": ["./src"],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
  },
  "files": [
    "src/SentryWorkflow.ts"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "typings/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}